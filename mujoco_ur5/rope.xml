<mujoco model="rope">

    <!-- Default settings for the model (size of capsule = 0.185)-->
    <default>
        <default class="rope">
            <geom type="capsule" size="0.02 0.0725" density="1700" friction="0.5" />
            <joint damping="2" stiffness="0.08" armature="0.01" />
        </default>
    </default>
    
    <!-- World body -->
    <worldbody>
        <!-- Fixed base of the DLO chain (no joint, so it remains in place) -->
        <body name="segment_0" pos="0.5 0 0.8">
            <geom name="geom_0" type="capsule" size="0.02 0.0725" rgba="0.8 0.2 0.2 1"/>
            <joint name="joint_0" type="ball" pos="0 0 0.0725" />
            <!-- This first segment is fixed in space without a joint -->

            <!-- Chain structure for the wire with ball joints -->
            <body name="segment_1" pos="0 0 -0.165">
                <geom name="geom_1" type="capsule" size="0.02 0.0725" rgba="0.8 0.2 0.2 1" />
                <joint name="joint_1" type="ball" pos="0 0 0.0725" />

                <body name="segment_2" pos="0 0 -0.165">
                    <geom name="geom_2" type="capsule" size="0.02 0.0725" rgba="0.8 0.2 0.2 1" />
                    <joint name="joint_2" type="ball" pos="0 0 0.0725" />

                    <body name="segment_3" pos="0 0 -0.165">
                        <geom name="geom_3" type="capsule" size="0.02 0.0725" rgba="0.8 0.2 0.2 1" />
                        <joint name="joint_3" type="ball" pos="0 0 0.0725" />

                    </body>
                </body>
            </body>
        </body>
    </worldbody>

</mujoco>
